<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.SplashActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/screen1"/>
    <RelativeLayout
        android:id="@+id/rl_import_process"
        android:visibility="visible"
        android:layout_below="@+id/rl_account_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_setting_streams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="250dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:text="Please wait while we are setting up live streams and vod"
            />

        <ProgressBar
            android:id="@+id/pb_circle_loader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_setting_streams"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:theme="@style/whiteLoader"
            />
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_import_layout"
            android:layout_below="@+id/tv_setting_streams"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_importing_epg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Importing EPG"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:layout_marginStart="30dp"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                />
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tv_importing_epg"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/greenprogress"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/tv_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progressBar"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="42dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                />
            <TextView
                android:id="@+id/tv_countings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progressBar"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="42dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
