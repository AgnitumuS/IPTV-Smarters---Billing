<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_manage_domains"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="?android:attr/colorBackground"
    tools:context="com.gehostingv2.gesostingv2iptvbilling.view.fragment.DomainsMangeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4f4f6">

        <RelativeLayout
            android:id="@+id/rl_manage_domains_outer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_line"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/line_light_gray_small" />

            <ImageView
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"

                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/backspress"
                android:id="@+id/iv_back_press"
                android:layout_width="24dp"
                android:layout_height="24dp"/>/>

            <TextView
                android:id="@+id/tv_manage_domains"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_line"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@string/font_family_regular"
                android:text="@string/manage_domains"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <View
                android:id="@+id/v_domains_manage"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/tv_manage_domains"
                android:background="@drawable/line_light_gray_small" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/sv_manage_domains"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/rl_manage_domains_outer"
            >


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_manage_domain_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_alert_message_manage_products"
                    android:layout_margin="20dp">

                    <RelativeLayout
                        android:id="@+id/rl_manage_domains"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_alert_message_manage_products"
                        android:background="@color/white">

                        <ImageView
                            android:id="@+id/iv_manage_domains"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp"
                            android:src="@drawable/domain_list_icon" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_toRightOf="@+id/iv_manage_domains">

                            <TextView
                                android:id="@+id/tv_manage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_family_medium"
                                android:gravity="start"
                                android:text="Managing"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                            <View
                                android:id="@+id/view_line_manage_domains"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_below="@+id/tv_manage"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="3dp"
                                android:background="@drawable/line_light_gray_small" />

                            <TextView
                                android:id="@+id/tv_domainsname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/view_line_manage_domains"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@string/font_family_medium"
                                android:gravity="start"
                                android:text="amanpreetsinghsaingino.com"
                                android:textColor="@color/black"
                                android:textSize="13dp" />

                            <TextView
                                android:id="@+id/iv_domain_staus"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_domainsname"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="13dp"
                                android:background="@drawable/status_invoice"
                                android:gravity="center"
                                android:text="Active"
                                android:textColor="@color/white"
                                android:textSize="12dp" />
                        </RelativeLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/tv_domains_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cv_manage_domain_header"
                    android:layout_marginLeft="40dp"
                    android:fontFamily="@string/font_family_thin"
                    android:text="Domain Detail"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_product_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_domains_detail"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp">

                    <RelativeLayout
                        android:id="@+id/rl_product_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_product_detail"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/tv_domain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@string/font_family_medium"
                            android:gravity="start"
                            android:paddingLeft="10dp"
                            android:text="Domain:"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_domain_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/tv_product"
                            android:fontFamily="@string/font_family_medium"
                            android:gravity="end"
                            android:text="amanpreetsinghsaingino.com"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_domain"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@string/font_family_medium"
                            android:gravity="start"
                            android:paddingLeft="10dp"
                            android:text="Status:"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_status_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/tv_domain_value"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/tv_product"
                            android:fontFamily="@string/font_family_regular"
                            android:gravity="end"
                            android:text="Active"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_registration_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_status"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@string/font_family_medium"
                            android:gravity="start"
                            android:paddingLeft="10dp"
                            android:text="Registration Date:"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_registration_date_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/tv_status_value"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/tv_product"
                            android:fontFamily="@string/font_family_regular"
                            android:gravity="end"
                            android:text="2017-04-21"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_next_due_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_registration_date"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@string/font_family_medium"
                            android:gravity="start"
                            android:paddingLeft="10dp"
                            android:text="Next Due Date:"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_next_due_date_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/tv_registration_date_value"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/tv_product"
                            android:fontFamily="@string/font_family_regular"
                            android:gravity="end"
                            android:text="21-05-2017"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_recurring_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_next_due_date"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@string/font_family_medium"
                            android:gravity="start"
                            android:paddingLeft="10dp"
                            android:text="Recurring Amount:"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_recurring_amount_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/tv_next_due_date_value"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/tv_product"
                            android:fontFamily="@string/font_family_regular"
                            android:gravity="end"
                            android:text="10.0"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_payment_method"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_recurring_amount"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@string/font_family_medium"
                            android:gravity="start"
                            android:paddingLeft="10dp"
                            android:text="Payment Method:"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_payment_method_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/tv_recurring_amount_value"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/tv_product"
                            android:fontFamily="@string/font_family_regular"
                            android:gravity="end"
                            android:text="Gloabal iris"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_first_time_payment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_payment_method"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@string/font_family_medium"
                            android:gravity="start"
                            android:paddingLeft="10dp"
                            android:text="First Payment Amount:"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_first_time_payment_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/tv_payment_method_value"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/tv_product"
                            android:fontFamily="@string/font_family_regular"
                            android:gravity="end"
                            android:text="10.0"
                            android:textColor="@color/black"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView

                    android:id="@+id/cv_manage_domain_auto_renewal_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cv_product_detail"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"

                    android:layout_marginRight="20dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:id="@+id/tv_auto_renewal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@string/font_family_medium"
                            android:text="Auto Renewal Status :"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tv_auto_renewal_disable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@+id/tv_auto_renewal"
                            android:fontFamily="@string/font_family_medium"
                            android:text="Disable"
                            android:textColor="@android:color/holo_red_dark" />

                        <Button
                            android:id="@+id/tg_toggle_text"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            android:text="ENABLE"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="50dp"
                            android:layout_toRightOf="@+id/tv_auto_renewal_disable"
                            android:background="@color/manage_domain_bt"
                            android:textColor="@color/white"

                            android:textSize="13dp" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <Button
                    android:id="@+id/bt_manage_name_server"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cv_manage_domain_auto_renewal_status"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/manage_domain_bt"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="MANAGE NAMESERVERS"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</FrameLayout>


