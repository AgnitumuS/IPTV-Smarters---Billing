<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fl_my_credits"
    android:background="?android:attr/colorBackground"
    tools:context="com.gehostingv2.gesostingv2iptvbilling.view.fragment.MyCreditsFragment">
    <RelativeLayout
        android:background="#f4f4f6"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_add_funds"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_line"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/line_light_gray_small" />
            <ImageView
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/backspress"
                android:id="@+id/iv_back_press"
                android:layout_width="24dp"
                android:layout_height="24dp"/>/>


            <TextView
                android:id="@+id/tv_my_credits_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_line"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@string/font_family_regular"
                android:text="@string/my_credits"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <View
                android:id="@+id/view_line_my_credits"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/tv_my_credits_header"
                android:background="@drawable/line_light_gray_small" />

            <android.support.v7.widget.CardView
                android:visibility="gone"
                android:id="@+id/cv_add_funds_detail"
                android:layout_below="@+id/view_line_my_credits"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_below="@+id/tv_product_detail"
                    android:id="@+id/rl_product_detail"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_minimum_deposits"
                        android:text="Minimum Deposits:"
                        android:textSize="14dp"
                        android:textColor="@color/voip_detail_text"
                        android:gravity="start"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:fontFamily="@string/font_family_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_minimum_deposits_value"
                        android:layout_toRightOf="@+id/tv_product"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:text="$1.00 USD"
                        android:textColor="@color/voip_detail_text"
                        android:textSize="14dp"
                        android:gravity="end"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:fontFamily="@string/font_family_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_below="@+id/tv_minimum_deposits"
                        android:id="@+id/tv_maximum_deposits"
                        android:text="Maximum Deposits:"
                        android:textSize="14dp"
                        android:textColor="@color/voip_detail_text"
                        android:gravity="start"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:fontFamily="@string/font_family_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_maximum_deposits_value"
                        android:layout_below="@+id/tv_minimum_deposits_value"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:text="$1000.00 USD"
                        android:textColor="@color/voip_detail_text"
                        android:textSize="14dp"
                        android:gravity="end"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@string/font_family_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:layout_below="@+id/tv_maximum_deposits"
                        android:id="@+id/tv_maximum_balance"
                        android:text="Maximum Balance:"
                        android:textSize="14dp"
                        android:textColor="@color/voip_detail_text"
                        android:gravity="start"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:fontFamily="@string/font_family_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_maximum_balance_valie"

                        android:layout_below="@+id/tv_maximum_deposits_value"
                        android:layout_toRightOf="@+id/tv_product"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:text="$1000.00 USD"
                        android:textColor="@color/voip_detail_text"
                        android:textSize="14dp"
                        android:gravity="end"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:fontFamily="@string/font_family_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/cv_my_credits"
                android:layout_below="@+id/cv_add_funds_detail"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_below="@+id/tv_product_detail"
                    android:id="@+id/rl_add_funds_to"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/tv_remaining_credits"
                        android:text="Remaining Credits"
                        android:textSize="14dp"
                        android:textColor="@color/voip_detail_text"
                        android:gravity="start"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:fontFamily="@string/font_family_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingLeft="20dp"
                        android:textSize="20dp"
                        android:gravity="center_vertical|left"
                        android:fontFamily="@string/font_family_regular"
                        android:textColor="@color/add_funds_text"
                        android:layout_below="@+id/tv_remaining_credits"
                        android:id="@+id/tv_my_credits_value"
                        android:background="@color/add_funds_edit_text_bg"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="10dp"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <Button
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/cv_my_credits"
                android:id="@+id/bt_add_funds"
                android:layout_alignParentEnd="true"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:textColor="@color/white"
                android:background="@color/add_funds_bt"
                android:text="ADD FUNDS"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>
            <TextView
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:textSize="10dp"
                android:textColor="@color/add_funds_text"
                android:fontFamily="@string/font_family_regular"
                android:text="@string/mandate_info"
                android:layout_below="@+id/bt_add_funds"
                android:id="@+id/tv_mandatory_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>


    </RelativeLayout>

</FrameLayout>
