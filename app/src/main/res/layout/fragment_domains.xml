<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fl_domains"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/colorBackground"
    tools:context="com.gehostingv2.gesostingv2iptvbilling.view.fragment.DomainsFragment">

    <RelativeLayout
        android:layout_height="match_parent"
        android:background="#f4f4f6"
        android:layout_width="match_parent">
        <RelativeLayout
            android:id="@+id/rl_my_domains"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/line_light_gray_small"
                android:id="@+id/iv_line"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                />
            <ImageView
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"

                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/backspress"
                android:id="@+id/iv_back_press"
                android:layout_width="24dp"
                android:layout_height="24dp"/>/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/tv_my_domains"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_line"
                android:fontFamily="@string/font_family_regular"
                android:text="@string/my_domains"
                android:textColor="@color/black"
                android:textSize="16dp"/>
            <View
                android:layout_below="@+id/tv_my_domains"
                android:background="@drawable/line_light_gray_small"
                android:id="@+id/view_line_my_domains"
                android:layout_width="match_parent"
                android:layout_height="3dp"/>
            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout_domains"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:animateLayoutChanges="true"
                android:layout_below="@+id/view_line_my_domains"
                app:tabMode="scrollable"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/AppTheme"/>
            <View
                android:layout_below="@+id/tab_layout_domains"
                android:background="@drawable/line_services"
                android:id="@+id/line_below_tabs"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <android.support.v4.view.ViewPager
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/pager"
                android:background="#f4f4f6"
                android:layout_below="@+id/line_below_tabs"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>



