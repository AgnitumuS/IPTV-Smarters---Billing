<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f4f4f6"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_view_outer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/rl_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:background="@drawable/chat_bubble"
            android:paddingLeft="15dp"
            android:scaleType="fitXY">

            <TextView
                android:id="@+id/tv_client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@string/font_family_medium"
                android:paddingRight="10dp"
                android:textColor="@color/view_ticket_request"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_client_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_client"
                android:layout_marginRight="25dp"
                android:fontFamily="@string/font_family_regular"
                android:textColor="@color/view_ticket_request"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_client_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_client_message"
                android:layout_marginRight="15dp"
                android:fontFamily="@string/font_family_regular"
                android:textColor="@color/view_ticket_request"
                android:textSize="11dp" />
            <TextView
                android:id="@+id/tv_hide_client"
                android:layout_below="@+id/tv_client_date"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:visibility="gone"
                android:layout_marginBottom="30dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_admin_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:background="@drawable/chat_bubble"
            android:paddingLeft="15dp"
            android:scaleType="fitXY"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@string/font_family_medium"
                android:paddingRight="10dp"
                android:textColor="@color/view_ticket_request"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_admin_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_admin"
                android:layout_marginRight="25dp"
                android:fontFamily="@string/font_family_regular"
                android:textColor="@color/view_ticket_request"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_admin_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_admin_message"
                android:layout_marginRight="15dp"
                android:fontFamily="@string/font_family_regular"
                android:textColor="@color/view_ticket_request"
                android:textSize="11dp"
                android:insetBottom="25dip"/>
            <TextView
                android:id="@+id/tv_hide_admin"
                android:layout_below="@+id/tv_admin_date"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:visibility="gone"
                android:layout_marginBottom="30dp"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_admin_placeholder"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/rl_admin_reply"
            android:layout_marginRight="20dp"
            android:src="@drawable/staff_placeholder"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/iv_client_placeholder"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/rl_client"
            android:layout_marginRight="20dp"
            android:src="@drawable/user_placeholder"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>



