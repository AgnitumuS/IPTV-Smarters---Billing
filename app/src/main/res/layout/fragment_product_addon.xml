<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fl_product_addon"
    android:background="?android:attr/colorBackground"
    tools:context="com.gehostingv2.gesostingv2iptvbilling.view.fragment.ProductAddonFragment">

    <RelativeLayout
        android:id="@+id/rl_product_addon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4f4f6">

        <RelativeLayout
            android:id="@+id/rl_header"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#ffffff">

            <ImageView
                android:id="@+id/iv_divider_"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c2c2c2" />
            <ImageView
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/backspress"
                android:id="@+id/iv_back_press"
                android:layout_width="24dp"
                android:layout_height="24dp"/>/>

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:text="Demo Product"
                android:textColor="#545454"
                android:textSize="18dp"
                android:textStyle="bold" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl_header"
            android:background="#c2c2c2"/>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_iptv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_divider"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_available_addon"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:background="@color/addon_bt"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="Available Addons"
                    android:textColor="@android:color/white"
                    android:textSize="15dp" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/my_recycler_view_addon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tv_available_addon"
                    android:layout_marginBottom="30dp"
                    android:scrollbars="vertical" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/tv_next"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/addon_bt"
            android:gravity="center"
            android:text="NEXT"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </RelativeLayout>
</FrameLayout>
